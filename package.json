{
  "name": "cidemo-frontend",
  "version": "0.3.0",
  "author": "Julie Ng <julie.ng@allianz.de>",
  "license": "MIT",
  "description": "AngularJS Frontend for continuous integration demo",
  "repository": {
    "type": "git",
    "url": "https://github.com/AllianzDeutschlandAG/cidemo-frontend"
  },
  "scripts": {
    "express:start": "node dist/server.js",
    "express:build": "babel server.js --out-dir dist",
    "ng": "ng",
    "serve": "ng serve",
    "build": "ng build --output-path dist",
    "serve:proxied": "ng serve --proxy-config ./config/proxy.conf.json",
    "dev": "concurrently 'npm run dev:build' 'npm run dev:server'",
    "dev:build": "ng build --watch --progress false --output-path dist",
    "dev:server": "nodemon --watch server.js --exec 'babel-node server.js'",
    "build:prod": "ng build --aot --prod --progress false",
    "test": "ng test",
    "test:headless": "ng test --single-run --progress false --browser ChromeHeadless",
    "test:once": "ng test --single-run --progress false",
    "lint": "tslint --config ./config/tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --config ./config/tslint.json 'src/**/*.ts' --fix",
    "e2e": "ng e2e",
    "e2e:prod": "ng e2e --progress false --serve false --config ./config/protractor.prod.conf.js",
    "preflight:check": "npm run test:headless && npm run lint && npm run e2e",
    "release": "standard-version",
    "version:next": "semver \"$(node --print \"require('./package.json').version\")\" -i minor"
  },
  "private": true,
  "dependencies": {
    "@angular-redux/store": "^6.5.7",
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "core-js": "^2.4.1",
    "express": "^4.16.2",
    "http-proxy-middleware": "^0.17.4",
    "redux": "^3.7.2",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "^1.2.6",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.0",
    "codelyzer": "~3.0.1",
    "concurrently": "^3.5.0",
    "copyfiles": "^1.2.0",
    "eslint": "^4.8.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.12.1",
    "protractor": "~5.1.2",
    "semver": "^5.4.1",
    "standard-version": "^4.2.0",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "es6": true,
      "jasmine": true,
      "node": true
    },
    "globals": {
      "context": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "semi": [
        "error",
        "never"
      ],
      "space-before-blocks": "error",
      "space-before-function-paren": "error",
      "spaced-comment": [
        "error",
        "always",
        {
          "exceptions": [
            "-",
            "+"
          ]
        }
      ],
      "strict": "warn"
    }
  }
}
